{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-celebrator",
  "version": "0.1.0",
  "identifier": "com.bytedance.desktop-celebrator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Overlay",
        "url": "/",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "maximized": true,
        "resizable": false
      },
      {
        "label": "settings",
        "title": "Desktop Celebrator Settings",
        "url": "/settings",
        "width": 800,
        "height": 600,
        "visible": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}